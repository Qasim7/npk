<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ekin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/ekin"
        android:layout_centerHorizontal="true"
        />
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/linear1"
        android:layout_below="@id/toolber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/planned"
            style="@style/textStyle"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:text="Planlaşdırılan məhsuldarlıq"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_planned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="8dp"
            app:boxBackgroundColor="@null"
            app:endIconMode="clear_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_fertility"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="sentner"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linear1"
        android:background="?android:attr/listDivider" />

    <RelativeLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider1"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_plants"
            style="@style/textStyle"
            android:layout_centerVertical="true"
            android:text="Bitkilər"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerplant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="8dp" />
    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linear2"
        android:layout_marginBottom="32dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/fertilizer"
        style="@style/textStyle"
        android:layout_below="@id/divider2"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:text="Lazım olan qida maddələri (kq)"
        android:textSize="16sp" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/fertilizer"
        android:background="?android:attr/listDivider" />


    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider3">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:weightSum="4">

            <TextView
                style="@style/textStyle"
                android:layout_column="1"
                android:layout_weight="3"
                android:text="Azot"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_azot"
                style="@style/textStyle"
                android:layout_column="2"
                android:layout_weight="1"
                android:text="" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:weightSum="4">

            <TextView
                style="@style/textStyle"
                android:layout_column="1"
                android:layout_weight="3"
                android:text="Fosfor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fosfor"
                style="@style/textStyle"
                android:layout_column="2"
                android:layout_weight="1"
                android:text="" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:weightSum="4">

            <TextView
                style="@style/textStyle"
                android:layout_column="1"
                android:layout_weight="3"
                android:text="Kalium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_kalium"
                style="@style/textStyle"
                android:layout_column="2"
                android:layout_weight="1"
                android:text="" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </TableLayout>

    <Button
        android:id="@+id/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/table"
        android:layout_margin="8dp"
        android:text="hesabla" />


</RelativeLayout>